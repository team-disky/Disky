<%= render 'customers/customer_header' %>

<div class="container">

	<div class="row err-space">
		<% if flash[:error] %>
			<p class="mx-auto error-message"><%= flash[:error] %></p>
		<% end %>
	</div>

	<div class="row">
		<div class="col-md-6 offset-md-3 border">
			<%= form_for @customer do |f| %>
			<div class="leave-space">
				<div>
					<div class="m-space">
						<span class="m-box">現在のパスワード</span>
					</div>
				</div>
				<%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
			</div>
			<div class="leave-space">
				<div class="m-space">
					<span class="m-box">新パスワード</span>
				</div>
		    	<%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
			</div>
			<div class="leave-space">
				<div class="m-space">
					<span class="m-box">新規確認用パスワード</span>
				</div>
		    	<%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control" %>
			</div>
			<div class="text-center leave-btn">
				<%= f.submit "パスワードを変更", name: 'edit_pass', class: "btn btn-success" %>
			</div>
			<% end %>
		</div>

	</div>
</div>

<%= render 'layouts/manager_footer' %>


