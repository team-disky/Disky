<%= render 'customers/customer_header' %>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>注文詳細</h3>
        </div>
        <div class="col-md-2">
            <%= link_to "戻る",customer_path(current_customer), class: "btn btn-success" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <span>ステータス:</span>
        </div>
        <div class="col-md-4">
        	<%= @order.status %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <span>注文ID:</span>
        </div>
        <div class="col-md-4">
            <%= @order.id %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <span>注文者:</span>
        </div>
        <div class="col-md-4">
            <%= @order.contractee_name %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <span>指定された住所:</span>
        </div>
        <div class="col-md-4">
            <%= @order.destination_address %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <span>支払い方法:</span>
        </div>
        <div class="col-md-4">
            <%= @order.payment_method %>
        </div>
    </div>

	<div class="row">
	    <div class="col-md-6">
			<br>
			<h3>購入内容</h3>
	    </div>

	    <div class="col-md-4">
			<br>
			<span><strong>￥<%= @order.total_amount %></strong></span>
	    </div>
	</div>

	<% @order.purchased_products.each do |purchased_product| %>
	<div class="row">
	    <div class="col-md-3">
	      <%= attachment_image_tag purchased_product.product, :image, size:'100x100', fallback: "no_image.png", class:"border" %>
	    </div>
	    <div class="col-md-2">
	      <span><%= purchased_product.product.title %></span>
	    </div>
	    <div class="col-md-2">
	      <span><%= purchased_product.product.artist.name %></span>
	    </div>
	    <div class="col-md-2">
	      <span>¥:<%= purchased_product.product.price %></span>
	      <sapn>数量:<%= purchased_product.count %></span>
	    </div>
	</div>
	<% end %>
</div>

<%= render partial: "layouts/manager_footer" %>