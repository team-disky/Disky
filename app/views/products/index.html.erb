<%= render 'customers/customer_header' %>

<div class="container">

	<h2 class="pt-5">商品一覧ページ</h2>

		<h3 class="py-3">新着商品</h3>
			<div class ="row">
				<div class="d-flex flex-row flex-wrap   justify-content-between">
					<% @products.order(id: :desc).each do |product| %>
	                    <div style="width:23%;">
	                    	<%= link_to product_path(product.id) do %>
							<div class="card text-center border border-secondary mb-5 shadow">
							<%= attachment_image_tag product, :image, :fill, 250, 250, format:'jpeg', fallback: "no_image.png", size:'250x250', class:" border border-secondary mx-auto" %>
								<div class="card-body">
								<h3 class="card-title font-italic" style=" width:100%; overflow:hidden; white-space:nowrap; text-overflow:ellipsis;"><%= product.title %></h3>
                                <ul class="list-group list-group-flush" >
						            <li class="list-group-item"><p class="font-italic"style=" width:100%; overflow:hidden; white-space:nowrap; text-overflow:ellipsis;"><%= product.artist.name %><p></li>
						            <li class="list-group-item"><strong>￥<%= product.price %></strong></li>
						            <% if product.status == "販売中" %>
									<li class="list-group-item"><span class="badge badge-primary"><%= product.status %></span></li>
									<%elsif product.status == "販売停止中" %>
									<li class="list-group-item"><span class="badge badge-danger"><%= product.status %></span></li>
								<% end %>
							    </ul>
								</div>
							</div>
							<% end %>
					    </div>
					<%end%>
				</div>
		    </div>
			<div class="kirikae">
			  <%= paginate @products %>
		    </div>
</div>