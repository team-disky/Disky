<%= render partial: "layouts/manager_header" %>

<div class="container">
	<h1>商品管理</h1>
	<div class="row">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>番号</th>
					<th>商品画像</th>
					<th>商品名</th>
					<th>価格(税込)</th>
					<th>在庫数</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td><%= attachment_image_tag product, :image %></td>
						<td><%= link_to product.title, manager_product_path(product.id) %></td>
						<td>￥<%= product.price %></td>
						<td></td>
						<td><%= product.status %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>