<%= render partial: "layouts/manager_header" %>

<div class="container">
	<div class="row">
		<h1>商品情報</h1>
		<div class="col">
			<%= attachment_image_tag @product, :image %>
		</div>
		<div class="col">
			<h2><%= @product.title %></h2>
			<h3><%= @product.artist.name %></h3>
		</div>
		<div class="col">
			<%= @product.format %><br>
			<%= @product.record_label.name %><br>
			<%= @product.category.name %><br>
			<%= @product.sales_date %><br>
		</div>
		<div class="col">
			<p>税込価格：<%= @product.price %>円</p>
			<%= @product.status %>
		</div>
	</div>
</div>