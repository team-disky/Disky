<div class="container">
<h3>新しいジャンルを登録</h3>

<div class="row">
　<div class="col-lg-3">

   <%= form_for(@category, url: manager_categories_path) do |f| %>

   <div class="field">
    <label for="category_name">ジャンル名</label>
    <%= f.text_field :name %>
   </div>

   <div class="actions">
    <%= f.submit '登録' %>
   <% end %>
   </div>
  </div>
 </div>

<div class="row">
 <div class="col-lg-9">
 <h3>登録ジャンル一覧</h3>
 <table>
 <thead>
  <tr>
 	<th>ジャンル名</th>
    <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
 <% @categories.each do |category| %>
 	<tr>
 		<td><%= category.name %></td>
 		<td><%= link_to "編集", edit_manager_category_path(category.id) %></td>
    <td><%= link_to "削除", manager_category_path(category.id), method: :delete, data: { confirm: "「」を削除します"} %></td>
 	</tr>
 <% end %>
</tbody>
</table>

 </div>
</div>

</div>