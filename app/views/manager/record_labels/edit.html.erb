<%= render partial: "layouts/manager_header" %>

<div class="container">
	<div class="row">
		<div class="col-md-4">
      <h3>レーベル名を編集</h3>

<!-- エラーメッセージ　-->
<br>
<% if @record_label.errors.any? %>
<div id="error_explanation">
  <h4>入力した内容に誤りがあります</h4>
  <h5>
      <% @record_label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </h5>
</div>
<% end %>

<%= form_for(@record_label, url:"/manager/record_labels/#{@record_label.id}") do |f| %>

<div class="field">
	<label for="record_label_name"></label>
    <%= f.text_field :name %>
</div>

<div class="actions">
    <%= f.submit '保存', :class=> "label-update-btn btn-lg" %>
</div>
    <%= f.submit "削除", name: 'leave', data: { confirm: "「#{@record_label.name}」を削除します"}, class: "btn-sm btn-danger" %>
<% end %>
<h3 class="back-to-top"><%= link_to "レーベル一覧へ戻る", manager_record_labels_path %><h3>
</div>
</div>
</div>

<%= render partial: "layouts/manager_footer" %>