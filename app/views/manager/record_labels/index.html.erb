<div class="container">
<h3>新しいレーベルを登録</h3>


<div class="row">
 <div class="col-lg-3">

   <%= form_for(@record_label, url: manager_record_labels_path) do |f| %>

   <div class="field">
    <label for="_record_label_name">レーベル名</label>
    <%= f.text_field :name %>
   </div>

   <div class="actions">
    <%= f.submit '登録' %>
   <% end %>
   </div>
  </div>
 </div>


<div class="row">
 <div class="col-lg-9">

 <h3>登録レーベル一覧</h3>
 <table>
 <thead>
  <tr>
    <th>レーベル名</th>
    <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
 <% @record_labels.each do |record_label| %>
    <tr>
        <td><%= record_label.name %></td>
        <td><%= link_to "編集", edit_manager_record_label_path(record_label.id) %></td>
    <td><%= link_to "削除", manager_record_label_path(record_label.id), method: :delete, data: { confirm: "「」を削除します"} %></td>
    </tr>
 <% end %>
</tbody>
</table>

 </div>
</div>

</div>