<div class="container">
<h3>新しいアーティストを登録</h3>

<div class="row">
　<div class="col-lg-3">

   <%= form_for(@artist, url: manager_artists_path) do |f| %>

   <div class="field">
    <label for="artist_name">アーティスト名</label>
    <%= f.text_field :name %>
   </div>

   <div class="actions">
    <%= f.submit '登録' %>
   <% end %>
   </div>
  </div>
 </div>

<div class="row">
 <div class="col-lg-9">
 <h3>登録アーティスト一覧</h3>
 <table>
 <thead>
 	<tr>
 		<th>アーティスト名</th>
    <th colspan="3"></th>
 	</tr>
 </thead>
 <tbody>
 <% @artists.each do |artist| %>
 	<tr>
 		<td><%= artist.name %></td>
 		<td><%= link_to "編集", edit_manager_artist_path(artist.id) %></td>
    <td><%= link_to "削除", manager_artist_path(artist.id), method: :delete, data: { confirm: "「#{artist.name}」を削除します"} %></td>
 	</tr>
 <% end %>
</tbody>
</table>

 </div>
</div>

</div>

